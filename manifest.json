{
    "name": "Ads, Be Gone!",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "An extension to block those pesky little ads.",
    "author": "ZeroPointNothing",


    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
    ],

    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["blocker.js"]
        }
    ],

      "icons": {
        "16": "assets/icons/abg16x16.png",
        "32": "assets/icons/abg32x32.png",
        "48": "assets/icons/abg48x48.png",
        "128": "assets/icons/abg128x128.png"
    },
    
    "action": {
        "default_popup": "popup/popup.html"
    }
}
